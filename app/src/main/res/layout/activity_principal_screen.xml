<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".PrincipalScreen">

<View
    android:id="@+id/photoUser"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:background="@drawable/photo_shape"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="30dp"

    />
<ImageView
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:src="@drawable/ic_nome"
    app:layout_constraintStart_toStartOf="@id/photoUser"
    app:layout_constraintEnd_toEndOf="@id/photoUser"
    app:layout_constraintTop_toTopOf="@id/photoUser"
    app:layout_constraintBottom_toBottomOf="@id/photoUser"

    />

    <ImageView
        android:id="@+id/iconUser"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_nome"
        app:layout_constraintTop_toBottomOf="@id/photoUser"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/nameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anderson Pereira"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/photoUser"
        app:layout_constraintStart_toEndOf="@id/iconUser"

        />
    <ImageView
        android:id="@+id/iconEmail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_email"
        app:layout_constraintTop_toBottomOf="@id/iconUser"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/emailUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="anderson@gmail.com"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/nameUser"
        app:layout_constraintStart_toEndOf="@id/iconEmail"
        />
    <Button
        android:id="@+id/btn_deslogar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Deslogar"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailUser"



        />



</androidx.constraintlayout.widget.ConstraintLayout>